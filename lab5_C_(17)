#include <stdio.h>

int main() {
    int n; // колво сенокосилок
    float m; // время работы первой сенокосилки в часах
    float totalhours = 0; // общее время работы в часах
    int i = 0; 

    printf("Введите количество сенокосилок (n): ");
    scanf("%d", &n);
    printf("Введите время работы первой сенокосилки (m) в часах: ");
    scanf("%f", &m);

    // Цикл с предусловием
    while (i < n) {
        totalhours += m; // добавляем время работы текущей сенокосилки
        m += (10.0 / 60.0); // увеличиваем время на 10 минут = 10/60 часов)
        i++; 
    }

    printf("Общее время работы всей бригады: %.2f часов\n", totalhours);

    return 0;
}
