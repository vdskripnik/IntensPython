#include <stdio.h>
int main() {
    float speed;

    printf("Введите скорость звука (м/с): ");
    scanf("%f", &speed);
//программа проверяет, к какой среде соответствует введенная скорость
    if (speed == 1483) {
        printf("Среда: Вода\n");
    } else if (speed == 5500) {
        printf("Среда: Стекло\n");
    } else if (speed == 3850) {
        printf("Среда: Гранит\n");
    } else if (speed == 4700) {
        printf("Среда: Медь\n");
    } else if (speed == 340) {
        printf("Среда: Воздух\n");
    } else {
        printf("Неизвестная среда\n"); //если скорость не соответствует ни одной из заданных
    }

    return 0;
}
